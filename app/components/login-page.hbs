<div class="row justify-content-lg-center">
    <form class="col-6" {{on "submit" this.login}}>
    <h1>Login</h1>
    <div class="form-group">
      <label class={{if loginInvalid this.classLabel}}> E-Mail
      <Input type="email" @value={{this.email}} class='form-control {{if loginInvalid this.classInput}}' {{on "keypress" this.typing}}/>
        {{#if this.loginInvalid}}
            <span class='{{if this.loginInvalid this.classSpan}} '>No user exists with this e-mail address {{this.email}} or the password is incorrect.</span>
        {{/if}}
      </label>
    </div>
    <div class="form-group">
      <label class={{if loginInvalid this.classLabel}}> Password
        <Input type="password" @value={{this.password}} class='form-control {{if loginInvalid this.classInput}}' {{on "keypress" this.typing}} />
        {{#if this.loginInvalid}}
            <span class='{{if this.loginInvalid this.classSpan}} '>No user exists with this e-mail address {{this.email}} or the password is incorrect.</span>
        {{/if}}
      </label>
    </div>
    <div class="btn-container">
      <button class="button" type="submit">Login</button>
    </div>
  </form>
</div>